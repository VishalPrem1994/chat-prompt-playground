{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "api/chat.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/chat_grok",
      "destination": "/api/call_grok.js"
    },
    {
      "source": "/api/chat_saladcloud",
      "destination": "/api/chat_saladcloud.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
} 