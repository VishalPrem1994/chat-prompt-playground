{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "api/chat.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api/auth.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/chat",
      "destination": "/api/chat.js"
    },
    {
      "source": "/api/auth",
      "destination": "/api/auth.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
} 